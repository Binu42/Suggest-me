<div class="card card-body">
    <h3 class="text-center">Edit Your Question</h3>
    <form action="/question/{{questioned._id}}?_method=PUT" method="post" class="mt-3 suggestion-form">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="question">Question</label>
            <textarea name="question" id="question" class="form-control">{{questioned.question}}</textarea>
            <div id="title-feedback" class="alert alert-danger d-none"></div>
        </div>
        <button class="btn btn-success btn-block">Submit</button>
    </form>

</div>