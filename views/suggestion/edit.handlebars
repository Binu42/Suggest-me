<div class="card card-body">
    <h3 class="text-center">Edit Your Suggestion</h3>
    <form action="/suggestions/{{suggested._id}}?_method=PUT" method="post" class="mt-3 suggestion-form">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" required value="{{suggested.title}}">
            <div id="title-feedback" class="alert alert-danger d-none"></div>
        </div>
        <div class="form-group">
            <label for="editor1">Suggestions</label>
            <textarea name="details" id="editor1" class="form-control" required>{{suggested.suggestion}}</textarea>
            <div id="note-feedback" class="alert alert-danger d-none"></div>
        </div>
        <button class="btn btn-success btn-block">Submit</button>
    </form>

</div>