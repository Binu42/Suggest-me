<div class="card card-body mb-3">
    <h3 class="text-center">Give Your Suggestions</h3>
    <form action="/suggestions/{{question._id}}" method="post" class="mt-3 suggestion-form">
        <div class="form-group">
            <label for="question">Title</label>
            <input type="text" name="question" id="question" class="form-control" required value="{{question.question}}" readonly>
            <div id="title-feedback" class="alert alert-danger d-none"></div>
        </div>
        <div class="form-group">
            <label for="editor1">Suggestions</label>
            <textarea name="suggestion" id="editor1" class="form-control" required></textarea>
            <div id="note-feedback" class="alert alert-danger d-none"></div>
        </div>
        <input type="submit" value="Suggest" class="btn btn-success btn-block">
    </form>

</div>